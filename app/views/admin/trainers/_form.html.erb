<div>
  <%= form_for trainer, url: {controller: :trainers, action: (params[:id].present? ? :update : :create)} do |f| %>
    <p>
    <%= f.label :name %>
    </br>
    <%= f.text_field :name %>
    </p>

    <p>
    <%= f.label :position %>
    </br>
    <%= f.text_field :position %>
    </p>

    <p>
    <%= f.label :profile_picture %>
    </br>
    <%= f.file_field :profile_picture %>
    </p>

    <p>
    <%= f.label :bio %>
    </br>
    <%= f.text_area :bio, class: :ckeditor %>
    </p>

    <p>
    <%= f.label :self_introduction %>
    </br>
    <%= f.text_area :self_introduction, class: :ckeditor %>
    </p>

    <p><%= f.submit %></p>
  <% end %>
</div>
