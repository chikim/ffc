<div>
  <h3><%= @trainer.name %></h3>
  position: <%= @trainer.position %>
</div>

<div>
  <%= image_tag @trainer.profile_picture, width: 480, height: 640 %>
</div>

<div>
  <h3>Bio</h3>
  <p><%= @trainer.bio.html_safe %></p>
</div>

<div>
  <h3>Self introduction</h3>
  <p><%= @trainer.self_introduction.html_safe %></p>
</div>

<div>
  <%= form_for @trainer, url: admin_trainer_path, method: :put do |f| %>
    <p>
    <%= f.label :name %>
    </br>
    <%= f.text_field :name %>
    </p>

    <p>
    <%= f.label :position %>
    </br>
    <%= f.text_field :position %>
    </p>

    <p>
    <%= f.label :profile_picture %>
    </br>
    <%= f.file_field :profile_picture %>
    </p>

    <p>
    <%= f.label :bio %>
    </br>
    <%= f.text_area :bio, class: :ckeditor %>
    </p>

    <p>
    <%= f.label :self_introduction %>
    </br>
    <%= f.text_area :self_introduction, class: :ckeditor %>
    </p>

    <p><%= f.submit %></p>
  <% end %>
</div>
