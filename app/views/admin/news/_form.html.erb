<div>
  <%= form_for news, url: {controller: :news, action: (params[:id].present? ? :update : :create)} do |f| %>
    <p>
    <%= f.label :title %>
    </br>
    <%= f.text_field :title %>
    </p>

    <p>
    <%= f.label :short_description %>
    </br>
    <%= f.text_area :short_description %>
    </p>

    <p>
    <%= f.label :cover_image %>
    </br>
    <%= f.file_field :cover_image %>
    </p>

    <p>
    <%= f.label :content %>
    </br>
    <%= f.text_area :content, class: :ckeditor %>
    </p>

    <p><%= f.submit %></p>
  <% end %>
</div>
