<h1>Introduction</h1>

<% if flash[:notice] %>
  <h3><font color="red"><%= flash[:notice] %></font></h3>
<% end %>

<% if @introduction.persisted? %>
  <div>
    <h3><%= @introduction.title %></h3>
    <%= @introduction.content.html_safe %>
  </div>
<% else %>
  <div>
    <h3><font color="red">General introduction has not been created</font></h3>
  </div>
<% end %>

<div>
  <%= form_for @introduction, url: update_general_admin_introduction_path, method: :post do |f| %>
    <p>
    <%= f.label :title %>
    </br>
    <%= f.text_field :title %>
    </p>

    <p>
    <%= f.label :content %>
    </br>
    <%= f.text_area :content, class: :ckeditor %>
    </p>

    <p><%= f.submit %></p>
  <% end %>
</div>
