<div>
  <%= form_for video, url: {controller: :videos, action: (params[:id].present? ? :update : :create)} do |f| %>
    <p>
    <%= f.label :title %>
    </br>
    <%= f.text_field :title %>
    </p>

    <p>
    <%= f.label :url %>
    </br>
    <%= f.text_field :url %> (Youtube and Vimeo only)
    </p>

    <p><%= f.submit %></p>
  <% end %>
</div>
