<div>
  <h3><%= @gallery.title %></h3>
</div>

<div>
  <table>
    <tbody>
      <% @photos.each do |photo| %>
        <tr>
          <td>
            <%= link_to gallery_photo_path(@gallery, photo) do %>
              <%= image_tag photo.image, width: 150, height: 200 %>
            <% end %>
          </td>
          <td>
            <%= link_to gallery_photo_path(@gallery, photo) do %>
              <h3><%= photo.title %></h3>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="apple_pagination">
  <%= will_paginate @photos, previous_label: "<", next_label: ">" %>
</div>
